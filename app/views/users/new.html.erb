<%= render "/shared/header" %>

<h3>Sign Up</h3>

<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
		<div class="error_messages">
		<h3>Form is invalid</h3>
		<ul>
			<% for message in @user.errors.full_messages %>
			<li><%= message %></li>
			<% end %>
		</ul>
		</div>
	<% end %>
	<div class="field">
		<%= f.label :name %></br>
		<%= f.text_field :name %></br></br>
	</div>
	<div class="field">
		<%= f.label :email %></br>
		<%= f.text_field :email %></br></br>
	</div>
	<div class="field">
		<%= f.label :password %></br>
		<%= f.password_field :password %></br></br>
	</div>
	<div class="field">
		<%= f.label :password_confirmation, "Confirm Passowrd" %></br>
		<%= f.password_field :password_confirmation %></br></br>
	</div>
	<div class="actions">
		<%= f.submit "Sign Up!" %>
	</div>

<% end %>
