<%= form_for (@product) do |f| %>
	<div class="field">
		<%= f.label :name %></br>
		<%= f.text_field :name %></br></br>
	</div>
	<div class="field">
		<%= f.label :description %></br>
		<%= f.text_area :description %></br></br>
	</div>
	<div class="field">
		<%= f.label :price_in_cents %></br>
		<%= f.number_field :price_in_cents %></br></br>
	</div>
	<!-- <div class="field">
		<%= f.label :category %></br>
	<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select one!") %></br></br>
	</div> -->
	<div class="actions">
		<%= f.submit "Save Product" %>
	</div>

	<% if @product.errors.any? %>
		<div id="error_explanation">
			<h3>
				Whoops!
				<%= pluralize(@product.errors.count, "error")%>
				prohibited this product from being saved:
			</h3>
			<ul>
				<% @product.errors.full_messages.each do |message|%>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

<% end %>