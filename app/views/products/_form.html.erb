<%= form_for (@product) do |f| %>
	<div class="field">
		<%= f.label :name %></br>
		<%= f.text_field :name %></br></br>
	</div>
	<div class="field">
		<%= f.label :description %></br>
		<%= f.text_area :description %></br></br>
	</div>
	<div class="field">
		<%= f.label :price_in_cents %></br>
		<%= f.number_field :price_in_cents %></br></br>
	</div>
	<div class="actions">
		<%= f.submit "Save Product" %>
	</div>
<% end %>