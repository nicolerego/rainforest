<h4>Reviews</h4>
<p> Reviews for <%= @product.name %></p>

<% @product.reviews.each do |review| %>
	<p>
		<%= review.comment%>
		</br>
		<% if review.user != nil %>
		<em> by <%= link_to review.user.name, user_path(:id) %></em>
		Added on: <%= review.created_at %></br></br>
		Edit form works but cannot link to it</br>
		/products/:product_id/reviews/:id/edit</br>
		<%= link_to "Edit", "/" %> | 
		<%= link_to "Delete", "/", method: :delete, data: {confirm: "Are you sure you want to delete this review"}  %>

		<% end %>
	</p>
<% end %>

