<%= render "/shared/header" %>
<h2>All Products</h2>
<%= link_to "+ Add a New Product",  new_product_url %>
<ul>
	<% @products.each do |product| %>
<li>
	<%= link_to product.name, product_path(product) %></br> 
	<%= product.description %> </br>
	<%= product.formatted_price %>
</li>
	<% end %>
</ul>
